---
import arrow from "../../assets/double-arrow-up.svg";
---

<div class="return-to-top shakeable">
  <a href="#top">
    <img src={arrow.src} alt="Return to top" />
  </a>
</div>

<style>
  .return-to-top {
    display: none;
    position: fixed;
    bottom: 50px;
    right: 50px;
    z-index: 100;
  }

  .return-to-top a {
    display: block;
    width: 2.5rem;
    height: 2.5rem;
    box-shadow: 2px 2px 6px var(--color-shadow-dark-trans);
    background-color: rgba(207, 207, 207, 0.9);
    border-top: 1px solid rgba(255, 255, 255, 0.5);
    border-left: 1px solid rgba(255, 255, 255, 0.5);
    backdrop-filter: blur(3px);
    border-radius: 4px;
    padding: 0.25rem;
    transition: all 0.2s ease-in-out;
  }

  .return-to-top a:hover {
    color: var(--color-black-70);
    box-shadow: 2px 2px 0px var(--color-shadow-dark-trans);
    transform: translate(2px, 2px);
  }

  .return-to-top a img {
    width: 2rem;
    filter: invert(1);
    transition: all 0.2s ease-in-out;

  }

  .return-to-top a:hover img {
    filter: invert(0);
  }
</style>
