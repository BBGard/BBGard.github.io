---

const Navbar = {
  logo: "/path/to/logo.png",
  links: [
    { text: "About", url: "#about" },
    { text: "Projects", url: "#projects" },
    { text: "Contact", url: "#contact" },
  ],
};

---

<nav class="navbar">
  <div class="logo">
    <img src={Navbar.logo} alt="Logo" />
    <a class="logo-text" href="#">Benjamin Gardiner</a>
  </div>

  <ul class="nav-links">
    <li>
      <a href={Navbar.links[0].url}>{Navbar.links[0].text}</a>
    </li>
    <li>
      <a href={Navbar.links[1].url}>{Navbar.links[1].text}</a>
    </li>
    <li>
      <a href={Navbar.links[2].url}>{Navbar.links[2].text}</a>
    </li>
  </ul>
</nav>
<div class="nav-divider" />


<style>
  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #0D192E;
    color: #fff;
    padding: 1rem;
    margin: 0;
  }

  .navbar .logo {
    display: flex;
    align-items: center;
  }

  .navbar .logo .logo-text {
    margin-left: 1rem;
    font-size: 1.5rem;
    font-family: 'Montserrat', sans-serif;
    text-decoration: none;
    color: #fff;
    /* TODO get fonts working */
  }

  .logo img {
    width: 100px;
  }

  .nav-links {
    display: flex;
    justify-content: space-between;
    width: 30%;
  }

  .nav-links li {
    list-style: none;
  }

  .nav-links a {
    color: #fff;
    text-decoration: none;
  }

  .nav-divider {
    width: 100%;
    height: 4px;
    background-color: #f9de15;
  }
</style>
