---
import Hamburger from "./Hamburger.astro";

const Navbar = {
  logo: "/path/to/logo.png",
  links: [
    // { text: "About", url: "/#about" },
    // { text: "Projects", url: "/#projects" },
    // { text: "Contact", url: "/#contact" },
    // { text: "Dev.Log", url: "/blog" },
  ],
};
---

<nav class="navbar">
  <div class="nav-container">
    <div class="logo">
      <a class="logo-text" href="/">Benjamin Gardiner</a>
    </div>

    <!-- <ul class="nav-links">
      <li>Home</li>
      <li>About</li>
      <li>Projects</li>
    </ul> -->
    <div class="email">
      <!-- <img src={Navbar.logo} alt="Logo" /> -->
      <a class="email-text" href="mailto:ben.b.gardiner@gmail.com"
          >ben.b.gardiner@gmail.com</a>
    </div>
    <Hamburger />
  </div>
</nav>

<style>
  /* Navbar Styles */

  .navbar {
    position: fixed;
    top: 0;
    padding-top: 1rem;
    width: 100%;
    height: 70px;
    background-color: var(--background-light);
    color: var(--primary);
    /* border-bottom: 2px solid var(--accent); */
    box-shadow: 2px 2px 0px var(--accent-transparent);

    transition: all 0.5s;
    z-index: 2;
  }

  .nav-container {
    display: flex;
    justify-content:space-between;
    align-items: center;
    width: 100%;
    max-width: 2000px;
    margin: 0 auto;
    padding: 0 3rem 1rem 3rem;
  }


  .navbar .logo .logo-text, .navbar .email .email-text {
    font-size: var(--font-size-1);
    font-family: var(--font-logo);
    font-weight: 600;
    text-decoration: none;
    color: var(--secondary);
    background-color: var(--primary);
    /* color: var(--accent); */
    padding: 0 0.5rem;
    transition: all 0.2s ease-in-out;
  }

  .navbar .logo .logo-text:hover, .navbar .email .email-text:hover {
    /* color: var(--secondary); */
    background-color: var(--accent);
    transform: translate(1px, 1px);
  }


  .logo img {
    width: 100px;
  }

  .nav-links {
    display: flex;
    justify-content: center;
    width: 50%;
    margin: 0;
    padding: 0;
    font-weight: 600;
  }

  .nav-links li {
    list-style: none;
    margin: 0;
    margin-left: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
    cursor: pointer;
    box-shadow: 2px 2px 0px var(--accent-transparent);
    transition: all 0.2s ease-in-out;
  }

  .nav-links li:hover {
    /* list-style: none;
    margin: 0;
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
    cursor: pointer;
    box-shadow:
      1px 1px 0px var(--accent-color-transparent),
      -1px -1px 0px var(--accent-transparent);
    transition: all 0.2s ease-in-out;
    transform: translate(2px, 2px); */
  }

  .nav-links a {
    /* color: var(--primary);
    text-decoration: none;
    font-size: var(--font-size-4);
    font-family: var(--font-logo);
    font-weight: 600; */
  }

  .email-text {
    /* font-family: var(--font-heading);
    font-size: 1rem; */
  }

  .expanded {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100vh;
    background-color: var(--background-light);
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
    padding: 0;
  }

  .expanded li {
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
    cursor: pointer;
    box-shadow: none;
  }

  .expanded li a {
    font-size: 3rem;
    line-height: 5rem;
  }

  .hide-nav {
    top: -5rem;
  }

  @media (max-width: 768px) {
    .nav-links {
      display: none;
    }

    .nav-links.expanded {
      display: flex;
    }
    .navbar .logo .logo-text {
      font-size: var(--font-size-2);
    }
  }
</style>
