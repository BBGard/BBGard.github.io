---
import { Media } from 'accessible-astro-components'

const { imgSrc, reverseImg = false } = Astro.props
---

<section class="my-64">
  <div class="container slide-in-left">
    <div class="grid grid-cols-1 gap-24 md:grid-cols-1 lg:grid-cols-2 items-center md:justify-items-center">
      {!reverseImg ? <Media class="rounded-lg fade-in shakeable md:max-w-md" src={imgSrc} /> : ''}
      <div class="space-content flex flex-col justify-center fade-in">
        <slot />
      </div>
      {reverseImg ? <Media class="rounded-lg fade-in shakeable md:max-w-md" src={imgSrc} /> : ''}
    </div>
  </div>
</section>
