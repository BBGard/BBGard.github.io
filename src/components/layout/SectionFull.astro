---
/**
 * @name SectionFull
 * @desc Section with full height
 * @prop {string} id - The id of the section
 * @prop {string} background - The background style of the section
 * @prop {string} className - Custom classes for the section
 */

// Destructure the id prop from Astro.props
const { id = "", background = "white", className="" } = Astro.props;
---

<section class=`section bg-${background} ${className}` id={id}>
  <slot />
</section>

<style>
  .section {
    display: flex;
    position: relative;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 100svh;
    padding-top: 4rem;
    padding-bottom: 4rem;
  }

  .bg-white {
    background-color: var(--color-white-100);
  }

  .bg-black {
    background-color: var(--color-black-100);
  }

  .bg-black-80 {
    background-color: var(--color-black-80);
  }

  .bg-special {
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.2)) , url('/src/assets/images/backg-pattern.svg') center center;
    /* background: linear-gradient(90deg, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.2)) , url('/src/assets/images/bg-special-2.svg') center center; */
    background-size: cover;
  }

  .bg-special-2 {
    background: linear-gradient(180deg, rgba(255, 255, 255, 1) 10%, rgba(0, 0, 0, 0.2)) , url('/src/assets/images/bg-special-3.svg') center center;
    background-size: cover;
  }



</style>
