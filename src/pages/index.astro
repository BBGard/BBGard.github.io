---
import { getCollection } from 'astro:content';

import Layout from "../layouts/Layout.astro";
import HeroSectionFull from "../components/HeroSectionFull.astro";
import ProjectSection from "../components/ProjectSection.astro";
import githubIcon from "../assets/github-mark-white.png";
import linkedinIcon from "../assets/LinkedIn_icon.svg";
import Social from "../components/Social.astro";
import Divider from "../components/Divider.astro";
import ContactForm from "../components/ContactForm.astro";
import "../styles/global.css";
// import headshot from "../assets/images/Headshot_2023_small_2.webp";
// import headshot from "../assets/images/Headshot_2024.webp";
import headshot from "../assets/images/Headshot_crop.webp";
import ButtonLink from "../components/ButtonLink.astro";
import emailIcon from "../assets/email_icon.svg";

const pageTitle = "Benjamin Gardiner - Software Engineer";
const aboutText_1 = [
  "Greetings! I'm Benjamin Gardiner, an IT graduate with a fervor for technology.",
  "My journey involves exploring the realms of user experience, design, software engineering, and web development, where I continually evolve my skills to stay at the forefront of innovation.",
];
const aboutText_2 = [
  "Welcome! I'm Benjamin Gardiner, a digital craftsman on a quest for perfection.",
  "Armed with a degree in Information Technology, my focus extends to refining user experiences, crafting elegant designs, and mastering the intricacies of software engineering and web development.",
];
const aboutText_3 = [
  "Hey there! I'm Benjamin Gardiner, a code artisan weaving digital experiences.",
  "With a Bachelor's in Information Technology, I channel my passion into sculpting seamless user experiences, creating captivating designs, and crafting robust solutions in the realm of web development.",
];

// Get all projects
  const allProjects = await getCollection('project');

// Randomise the about text
const aboutTexts = [aboutText_1, aboutText_2, aboutText_3];
const randomIndex = Math.floor(Math.random() * aboutTexts.length);
const aboutText = aboutTexts[randomIndex];
---

<Layout title={pageTitle}>
  <main>
    <HeroSectionFull>
      <h1 class="main-title show-cursor shakeable fade-in title-black-bg">
        Hi,<br />I'm Ben.
      </h1>
      <ButtonLink btnText="Learn More" btnLink="#about" size="large" />
    </HeroSectionFull>
    <Divider />
    <section id="about">
      <h2 class="secondary-title show-cursor shakeable slide-in-bottom title-black-bg">
        Profile
      </h2>
      <div class="flex-columns">
        <div class="column">
        <div class="text-box text-box-clamp slide-in-left card shakeable">
          <p class="about-text">
            <strong>High-achieving recent IT graduate</strong>with a track record of academic excellence.
          </p>
        </div>
        <div class="text-box text-box-clamp slide-in-left-d1 card shakeable">
          <p class="about-text">
            <strong>Adept in dynamic web development</strong>, I bring a proactive problem-solving approach, alongside a commitment to continuous self-improvement and learning.
          </p>
        </div>
        <div class="text-box text-box-clamp slide-in-left-d2 card shakeable">
          <p class="about-text">
            <strong>Demonstrating strong leadership and communication skills</strong>, I am eager to embark on a fulfilling career in software and web development.
          </p>
        </div>
        <div class="text-box text-box-clamp slide-in-left-d3 card shakeable">
          <p class="about-text">
            <strong>Seeking opportunities</strong> with organisations committed to fostering continual learning, collaborative innovation, and growth.
          </p>
        </div>
      </div>
          <!-- <div class="button-group">
            <Social
              icon={githubIcon}
              invertHover={true}
              platform="GitHub"
              username="bbgard"
            />
            <ButtonLink btnText="Projects" btnLink="#projects" size="large" />
            <Social
              icon={linkedinIcon}
              platform="LinkedIn"
              username="in/benjamin-gardiner-6b8478263/"
            />
          </div> -->

        <div class="headshot fade-in">
          <img
            class="show-cursor shakeable"
            src={headshot.src}
            alt="Image of Ben"
          />
        </div>

      </div>
      <ButtonLink btnText="Projects" btnLink="#projects" size="large" />

    </section>
    <Divider />
    <!-- Projects Section -->
    <div id="projects">
      <h2 class="secondary-title show-cursor shakeable slide-in-bottom">
        Projects
      </h2>

      {
        allProjects.map((project, index) => (
          <ProjectSection
            title={project.data.title}
            info={project.data.info}
            tags={project.data.tags}
            blogLink={project.data.blogLink}
            extLink={project.data.extLink}
            image={project.data.image}
            imgAlt={project.data.imgAlt}
            imgLink={project.data.imgLink}
            reverse={index % 2 === 1}
            nextBtn={true}
          />
        ))
      }
      <article class="card card-center shakeable slide-in-bottom">
        <h3 class="title">More Projects</h3>
        <p>For more projects, check out my GitHub!</p>
        <div class="butotn-group">
          <Social
            icon={githubIcon}
            invertHover={true}
            platform="GitHub"
            username="bbgard"
            size="full"
          />
          <ButtonLink
            btnText="Contact"
            btnLink="#contact"
            size="full"
            icon={emailIcon.src}
            invert={true}
            invertHover={true}
          />
        </div>
      </article>
    </div>

    <Divider size="full" margin="large" />

    <!-- Contact Section -->
    <div id="contact">
      <section>
        <h2 class="secondary-title show-cursor shakeable slide-in-bottom">
          Contact
        </h2>
        <ContactForm />
      </section>
    </div>

    <style>
      .main-title {
        text-align: left;
        margin-bottom: 2rem;
      }

      .about-text {
        font-size: 1.3rem;
        line-height: 2.2rem;
      }

      .next-project {
        display: flex;
        justify-content: center;
      }

      @media screen and (max-width: 768px) {
        .btn-primary {
          font-size: 1rem;
        }

        .headshot {
          width: 100%;
        }
      }
    </style>
  </main>
</Layout>
