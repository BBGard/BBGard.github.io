      </div>

      <ButtonLink
        btnText="Keep Going..."
        btnLink="#projects"
        size="large"
        customClass="scroll-btn"
      />
    </section>
    <Divider />
    <div id="projects">
      <div class="center-title">
        <h2
          class="secondary-title shakeable slide-in-bottom title-black-bg uppercase"
        >
          Projects
        </h2>
      </div>
      {
        allProjects.map((project, index) => (
          <ProjectSectionFull
            title={project.data.title}
            info={project.data.info}
            tags={project.data.tags}
            blogLink={project.data.blogLink}
            extLink={project.data.extLink}
            image={project.data.image}
            imgAlt={project.data.imgAlt}
            imgLink={project.data.imgLink}
            reverse={index % 2 === 1}
            nextBtn={index !== allProjects.length - 1}
            prevBtn={index !== 0}
            hidden={index !== 0}
            endBtn={index === allProjects.length - 1}
          />
        ))
      }
    </div>

    <Divider size="full" />

    <div id="contact">
      <section>
        <h2
          class="secondary-title show-cursor shakeable slide-in-bottom title-black-bg"
        >
          Contact
        </h2>
        <ContactForm />
      </section>
    </div>

    <Resume />


    <style>
      .left-column {
        width: 50%;
        padding: 2rem;
      }
      .main-title {
        text-align: left;
        padding: 1rem;
        margin-bottom: 1rem;
      }

      .main-text {
        font-size: var(--font-size-2);
        margin-bottom: 2rem;
      }

      .main-text-bold {
        font-weight: 600;
      }

      #profile {
        align-items: flex-start;
      }

      .about-text {
        font-size: var(--font-size-3);
      }

      article p {
        text-align: center;
      }

      .svg-column {
        width: 50%;
      }

      @media screen and (max-width: 1100px) {
        .left-column {
          width: 100%;
        }
        .btn-primary {
          font-size: 1rem;
        }

        .headshot {
          width: 75%;
        }

        .hero-button-card {
          padding: 0;
        }
      }
    </style>
  </main>
</Layout>
