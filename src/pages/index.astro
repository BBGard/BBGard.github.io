---
import { getCollection } from "astro:content";

import Layout from "../layouts/Layout.astro";
import HeroSectionFull from "../components/HeroSectionFull.astro";
import ProjectSectionFull from "../components/ProjectSectionFull.astro";
import Divider from "../components/Divider.astro";
import ContactForm from "../components/ContactForm.astro";
import "../styles/global.css";
import headshot from "../assets/images/Headshot_2024_crop_square.webp";
import ButtonLink from "../components/ButtonLink.astro";
import ContactButtons from "../components/ContactButtons.astro";
import Resume from "../components/Resume.astro";
import arrow8 from "../assets/arrow-8.svg";

const pageTitle = "Benjamin Gardiner - Software Engineer";

// Get all projects
const allProjects = await getCollection("project");
// Order projects by index
allProjects.sort((a, b) => a.data.index - b.data.index);
---

<Layout title={pageTitle}>
  <main>
    <HeroSectionFull>
      <div class="column left-column">
        <div class="card-black-bg main-title shakeable fade-in">
          <h1 class="">Hi, I'm Ben.</h1>
          <p class="main-text">
            <strong class="main-text-bold">A Software Engineer</strong> with a passion
            for creating innovative and user-friendly web applications.
          </p>
          <ContactButtons align="left" />
        </div>
        <div class="button-group">
          <ButtonLink
            btnText="Read More"
            btnLink="#profile"
            size="large"
            customClass="scroll-btn"
          />
        </div>
      </div>
      <div class="headshot fade-in column">
        <img
          class="show-cursor shakeable"
          src={headshot.src}
          alt="Image of Ben"
        />
      </div>
    </HeroSectionFull>
    <Divider />

    <section id="profile">
      <h2
        class="secondary-title shakeable slide-in-bottom title-black-bg uppercase"
      >
        Profile
      </h2>
      <div class="flex-columns">
        <div class="column">
          <ul class="bullet-list text-box text-box-clamp slide-in-left card shakeable">
            <li class="text-box text-box-clamp no-bullet slide-in-left shakeable">
              <p class="bullet-text">
                <strong>High-achieving IT graduate</strong> with a track record of academic
                excellence, excelling with a GPA of 6.9 out of 7.
              </p>
            </li>
            <li class="text-box text-box-clamp slide-in-left-d1 no-bullet shakeable">
              <p class="bullet-text">
                <strong>Adept in dynamic web development</strong>, experienced in
                creating dynamic and responsive websites and applications.
              </p>
            </li>
            <li class="text-box text-box-clamp slide-in-left-d2 no-bullet shakeable">
              <p class="bullet-text">
                <strong>Proactive problem-solver</strong> with a knack for identifying
                innovative solutions to complex challenges.
              </p>
            </li>
            <li class="text-box text-box-clamp slide-in-left-d3 no-bullet shakeable">
              <p class="bullet-text">
                <strong>Committed to continuous self-improvement and learning</strong
                >, actively seeking out new challenges to expand my skill set and
                knowledge base.
              </p>
            </li>
          </ul>
        </div>
        {arrow8.src && (
          <img
            class="svg-column slide-in-top"
            src={arrow8.src}
            alt="Decorative arrow"
          />
        )}
