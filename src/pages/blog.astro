---
import Layout from "../layouts/Layout.astro";
import "../styles/blog.css";

const allPosts = await Astro.glob("../pages/posts/*.md");
const pageTitle = "Blog of Ben";
---

<Layout title={pageTitle}>
  <main>
    <section>
      <h1>Posts</h1>
      <ul>
        {
          allPosts.map((post) => (
            <li>
              <a href={post.url}>{post.frontmatter.title}</a>
            </li>
          ))
        }
      </ul>
    </section>
  </main>
</Layout>

<style>


  ul {
    list-style: none;
    padding: 0;
  }


</style>
