---
/**
 * @name ImgTextSectionFull
 * @desc A simple component to display an image and text side by side.
 * @param {string} id - The id of the component.
 * @param {string} title - The title of the component.
 * @param {boolean} reverse - Whether to reverse the order of the image and text.
 * @param {string} imgSrc - The source of the image.
 * @param {string} imgAlt - The alt text of the image.
 */
interface Props {
  id: string;
  title: string;
  reverse?: boolean;
  imgSrc?: string;
  imgAlt?: string;
}

const { id = "", title = "", reverse = false, imgSrc = "", imgAlt = "" } = Astro.props;
---

<section id={id}>
  <h2 class="secondary-title show-cursor">{title}</h2>
  <div class={reverse ? "flex-columns-reverse" : "flex-columns"}>
    <div class="text-box">
      <!-- Text/buttons etc inserted here -->
      <slot />
    </div>
    <div class="image-box">
      <img class="show-cursor" src={imgSrc} alt={imgAlt} />
    </div>
  </div>
</section>
<style>
   h2.secondary-title {
      font-family: var(--font-primary);
      font-weight: 600;
      line-height: 1.2em;
      margin-bottom: 2rem;
      text-align: center;
      color: var(--primary);
      font-size: clamp(3rem, 6rem, 8rem);
      text-shadow: 6px 6px 0px var(--accent-transparent);
      transition: all 0.2s ease-in-out;
    }

    .text-box {
      width: 60%;
      padding: 2rem;
      font-size: 1.5rem;
      line-height: 1.5em;
    }

    .image-box {
      width: 40%;
      padding: 2rem;
    }

    .image-box img {
      border: 4px solid var(--primary);
      box-shadow: 6px 6px 0px var(--accent-transparent);
      border-radius: 50%;
      width: 100%;
      /* Initially black and white */
      filter: grayscale(100%);
      transition: all 0.2s ease-in-out;
    }

    .image-box img:hover {
      filter: grayscale(0%);
      box-shadow: 3px 3px 0px var(--accent-color-transparent);
    }

    .secondary-title:hover {
      text-shadow: 3px 3px 0px var(--accent-color-transparent);
    }
</style>
