---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ReturnToTopButton from "../components/ReturnToTopButton.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-slate-900">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Benjamin Gardiner" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />

    <slot />
    <ReturnToTopButton />
    <Footer />
    <script>
      import "../scripts/menu.js";
			import "../scripts/effects.js";
      import "../scripts/returnToTop.js";
      import "../scripts/navHide.js";
      import "../scripts/buttons.js";
    </script>
  </body>
</html>
