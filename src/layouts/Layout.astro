---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ReturnToTopButton from "../components/ReturnToTopButton.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-slate-900">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Benjamin Gardiner" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <Header />

    <slot />
    <ReturnToTopButton />
    <Footer />
    <script>
      import "../scripts/menu.js";
      import "../scripts/effects.js";
      import "../scripts/returnToTop.js";
      import "../scripts/navHide.js";
      import "../scripts/buttons.js";
    </script>
    <script src="https://kit.fontawesome.com/f893c1c574.js" crossorigin="anonymous"></script>
  </body>
</html>
